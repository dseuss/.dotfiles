###############################################################################
# KEY SETTINGS# {{{
###############################################################################

# The wm-modifier is the super-key
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Q kill

# Rename workspace
bindsym $mod+n exec rename-workspace

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# move container to different output
bindsym $mod+Ctrl+H move workspace to output left
bindsym $mod+Ctrl+J move workspace to output down
bindsym $mod+Ctrl+K move workspace to output up
bindsym $mod+Ctrl+L move workspace to output right

# container splitting
bindsym $mod+v split h
bindsym $mod+s split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
# I dont use stacking, so I reserve that key for splitting
#bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# change focus between tiling / floating windows
bindsym $mod+m focus mode_toggle
# toggle tiling / floating
bindsym $mod+t floating toggle

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
#bindcode $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+exclam move container to workspace number 1
bindsym $mod+Shift+quotedbl move container to workspace number 2
bindsym $mod+Shift+section move container to workspace number 3
bindsym $mod+Shift+dollar move container to workspace number 4
bindsym $mod+Shift+percent move container to workspace number 5
bindsym $mod+Shift+ampersand move container to workspace number 6
bindsym $mod+Shift+slash move container to workspace number 7
bindsym $mod+Shift+parenleft move container to workspace number 8
bindsym $mod+Shift+parenright move container to workspace number 9
bindsym $mod+Shift+equal move container to workspace number 10

# cycle between workspaces on same screen
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Shift+Tab workspace next_on_output

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

########################################################################### }}}
# APPLICATION SHORTCUTS # {{{
###############################################################################

# start a terminal
bindsym $mod+Return exec gnome-terminal
bindsym $mod+Shift+Return exec xfce4-terminal
#bindsym $mod+Return exec xfce4-terminal
#bindsym $mod+Shift+Return exec gnome-terminal

# start the program launcher
bindsym $mod+d exec gnome-do
#bindsym $mod+space exec gnome-do

# bind the ThinkPad function keys
bindsym XF86Display exec /home/dsuess/bin/toggle-monitor position
bindsym XF86Sleep exec sudo /usr/sbin/pm-suspend
bindsym XF86Battery exec sudo /sbin/hdparm -Y /dev/sdb
bindsym XF86ScreenSaver exec /usr/bin/xflock4

# Media keys for clementine
bindsym XF86AudioPlay exec clementine -t
bindsym XF86AudioStop exec clementine -s
bindsym XF86AudioNext exec clementine -r
bindsym XF86AudioPrev exec clementine -f

# show the "task manager"
bindsym $mod+F12 exec "gnome-terminal -x sh -c 'i3-msg floating enable; htop'"

# our all beloved gvim...
bindsym $mod+g exec gvim

########################################################################### }}}
# WINDOWS CLASSES # {{{
###############################################################################
