#!/bin/bash
#
# Make sure vim is always run inside tmux session

if [ -z "$TMUX" ]; then
   if [ -z "$1" ]; then
      tmux new "/usr/local/bin/vim"
   else
      tmux new "/usr/local/bin/vim $(printf ' %q' "$@")"
   fi
else
   if [ -z "$1" ]; then
      /usr/local/bin/vim
   else
      /usr/local/bin/vim $(printf ' %q' "$@")
   fi
fi
