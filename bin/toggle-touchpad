#!/bin/bash

state=$(xinput list-props "SynPS/2 Synaptics TouchPad" | grep Enabled | awk '{print $4}')
if [ "$state" -eq 0 ] 2>/dev/null; then
   xinput enable "SynPS/2 Synaptics TouchPad"
   notify-send -c TouchPad "SynPS/2 Synaptics TouchPad enabled"

else
   xinput disable "SynPS/2 Synaptics TouchPad"
   notify-send -c TouchPad "SynPS/2 Synaptics TouchPad disabled"
fi
